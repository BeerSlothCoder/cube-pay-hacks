# ==============================================
# CUBEPAY MONOREPO - PRODUCTION ENVIRONMENT
# ==============================================
# IMPORTANT: Copy this to .env.production and fill in your production values
# NEVER commit real credentials - use CI/CD secrets management

# SECTION 1: DATABASE (Production Supabase)
# ==============================================
# Create a separate Supabase project for production
# Project Dashboard: https://supabase.com/dashboard

# Get these from: Project Settings > API > Project URL
VITE_SUPABASE_URL=https://YOUR_PRODUCTION_PROJECT_ID.supabase.co

# Get this from: Project Settings > API > Project API Keys > anon/public
VITE_SUPABASE_ANON_KEY=YOUR_PRODUCTION_ANON_KEY_HERE

# DANGER: Service role key - use ONLY in backend/server environment
# Get this from: Project Settings > API > Project API Keys > service_role
VITE_SUPABASE_SERVICE_ROLE_KEY=YOUR_PRODUCTION_SERVICE_ROLE_KEY_HERE

# SECTION 2: BLOCKCHAIN - THIRDWEB
# ==============================================
# ThirdWeb Console: https://thirdweb.com/dashboard/settings/api-keys
VITE_THIRDWEB_CLIENT_ID=YOUR_PRODUCTION_CLIENT_ID
VITE_THIRDWEB_SECRET_KEY=YOUR_PRODUCTION_SECRET_KEY

# SECTION 3: PAYMENTS - REVOLUT (if using)
# ==============================================
# Revolut Dashboard: https://merchant.revolut.com
REVOLUT_CLIENT_ID=YOUR_PRODUCTION_CLIENT_ID
REVOLUT_MERCHANT_API_SECRET=sk_prod_...
REVOLUT_MERCHANT_API_PUBLIC=pk_prod_...
REVOLUT_API_KEY=sk_prod_...
REVOLUT_ACCESS_TOKEN=YOUR_PRODUCTION_TOKEN
REVOLUT_API_BASE_URL=https://merchant.revolut.com
REVOLUT_WEBHOOK_SECRET=wsk_prod_...
REVOLUT_ENVIRONMENT=production

# SECTION 4: HEDERA (if using)
# ==============================================
VITE_HEDERA_NETWORK=mainnet
VITE_HEDERA_USDH_TOKEN_ID=YOUR_MAINNET_TOKEN_ID
VITE_TREASURY_ACCOUNT_ID=YOUR_MAINNET_TREASURY
VITE_TREASURY_PRIVATE_KEY=YOUR_MAINNET_PRIVATE_KEY
VITE_HEDERA_OPERATOR_ID=YOUR_MAINNET_OPERATOR
VITE_HEDERA_OPERATOR_KEY=YOUR_MAINNET_OPERATOR_KEY

# SECTION 5: MONOREPO PORTS (Production)
# ==============================================
# These may not apply if using serverless deployment
VITE_API_SERVER_PORT=4000
VITE_DEPLOYMENT_APP_PORT=3000
VITE_AR_VIEWER_APP_PORT=3001

# SECTION 6: API URLS (Production)
# ==============================================
# Update to your production domain
VITE_API_SERVER_URL=https://api.cubepay.example.com
VITE_DEPLOYMENT_APP_URL=https://deploy.cubepay.example.com
VITE_AR_VIEWER_APP_URL=https://viewer.cubepay.example.com

# SECTION 7: ENS CONFIGURATION (Mainnet)
# ==============================================
# For production, use mainnet instead of sepolia
VITE_ENS_RESOLVER_NETWORK=mainnet
VITE_ENS_DOMAIN=cube-pay.eth
VITE_ENS_RPC_ENDPOINT=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# SECTION 8: OPTIONAL SERVICES
# ==============================================
VITE_ASSEMBLY_AI_API_KEY=YOUR_ASSEMBLY_AI_KEY
VITE_USE_MOCK_TRAVEL=false

# SECTION 9: TRAVEL AGENTS (Hedera - if using)
# ==============================================
VITE_TRAVEL_AGENT_BACKEND_URL=https://travel-agents.cubepay.example.com
VITE_TRAVEL_AGENT_ID=YOUR_MAINNET_AGENT_ID
VITE_USDH_TOKEN_ID=YOUR_MAINNET_USDH_TOKEN_ID
VITE_BUS_AGENT_ID=YOUR_MAINNET_BUS_AGENT_ID
VITE_TRAIN_AGENT_ID=YOUR_MAINNET_TRAIN_AGENT_ID
VITE_HOTEL_AGENT_ID=YOUR_MAINNET_HOTEL_AGENT_ID

# SECTION 10: CURRENCY & REGIONAL
# ==============================================
VITE_PRIMARY_CURRENCY=USD
VITE_FALLBACK_CURRENCY=EUR
VITE_SUPPORTED_REGIONS=EU,UK,US

# SECTION 11: FEATURE FLAGS
# ==============================================
VITE_ENABLE_HEDERA_AI=true
VITE_ENABLE_TRAVEL_AGENTS=true
VITE_ENABLE_A2A=true
VITE_ENABLE_X402=true

# SECTION 12: A2A & MCP CONFIGURATION
# ==============================================
VITE_A2A_BASE_URL=https://a2a.cubepay.example.com
VITE_NEXUS_API_URL=https://nexus.thirdweb.com/api

# SECTION 13: MONITORING & ANALYTICS (Optional)
# ==============================================
# Sentry error tracking
SENTRY_DSN=https://YOUR_SENTRY_KEY@sentry.io/YOUR_PROJECT_ID

# LogRocket session replay
LOGROCKET_APP_ID=YOUR_LOGROCKET_APP_ID

# Analytics
GOOGLE_ANALYTICS_ID=YOUR_GA_ID

# SECTION 14: SECURITY HEADERS
# ==============================================
# Content Security Policy (set in server config, not here)
# Allowed origins for CORS
ALLOWED_ORIGINS=https://cubepay.example.com,https://www.cubepay.example.com

# API Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=3600000

# ==============================================
# DEPLOYMENT NOTES
# ==============================================
# 1. Replace all "YOUR_*" placeholders with actual production values
# 2. Use CI/CD secrets management (GitHub Secrets, Vercel Secrets, etc.)
# 3. NEVER hardcode secrets in version control
# 4. Use separate values for each environment (dev, staging, prod)
# 5. Rotate credentials quarterly
# 6. Enable audit logging for all credential access
# 7. Use different wallet addresses for each network environment
